WOLFEXEC_TEST_OBJS = ${WOLFEXEC_SRCDIR}/test.o
WOLFEXEC_TEST = ${WOLF_BINDIR}/test
WOLFEXEC_RUNNER_OBJS = ${WOLFEXEC_SRCDIR}/runner.o
WOLFEXEC_RUNNER = ${WOLF_BINDIR}/runner
WOLFEXEC = ${WOLFEXEC_TEST} ${WOLFEXEC_RUNNER}

LIBS += -lpthread -ld2mce -lcom -lwolf
LDFLAGS += -L${COMLIB_SRCDIR} -L${WOLFLIB_SRCDIR}

${WOLFEXEC_TEST}: ${WOLFEXEC_TEST_OBJS}
	${CPP} -o $@ ${LDFLAGS} $^ ${LIBS}

${WOLFEXEC_RUNNER}: ${WOLFEXEC_RUNNER_OBJS}
	${CPP} -o $@ ${LDFLAGS} $^ ${LIBS}

wolfexec_clean:
	-rm ${WOLFEXEC_TEST_OBJS} ${WOLFEXEC_RUNNER_OBJS} ${WOLFEXEC}

