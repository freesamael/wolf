WOLFEXEC_TEST_FLOW_OBJS = ${WOLFEXEC_SRCDIR}/testflow.o
WOLFEXEC_TEST_FLOW = ${WOLF_BINDIR}/testflow
WOLFEXEC_TEST_TLV_OBJS = ${WOLFEXEC_SRCDIR}/testtlv.o
WOLFEXEC_TEST_TLV = ${WOLF_BINDIR}/testtlv
WOLFEXEC_TEST_TCPS_OBJS = ${WOLFEXEC_SRCDIR}/testtcpserver.o
WOLFEXEC_TEST_TCPS = ${WOLF_BINDIR}/testtcpserver
WOLFEXEC_TEST_TCPC_OBJS = ${WOLFEXEC_SRCDIR}/testtcpclient.o
WOLFEXEC_TEST_TCPC = ${WOLF_BINDIR}/testtcpclient
WOLFEXEC_TEST_UDPC_OBJS = ${WOLFEXEC_SRCDIR}/testudpclient.o
WOLFEXEC_TEST_UDPC = ${WOLF_BINDIR}/testudpclient
WOLFEXEC_RUNNER_OBJS = ${WOLFEXEC_SRCDIR}/runner.o
WOLFEXEC_RUNNER = ${WOLF_BINDIR}/runner

WOLFEXEC = ${WOLFEXEC_TEST_FLOW} ${WOLFEXEC_TEST_TLV} ${WOLFEXEC_RUNNER} \
${WOLFEXEC_TEST_TCPS} ${WOLFEXEC_TEST_TCPC} ${WOLFEXEC_TEST_UDPC} 

LIBS += -lpthread -ld2mce -lcom -lwolf
LDFLAGS += -L${COMLIB_SRCDIR} -L${WOLFLIB_SRCDIR}

${WOLFEXEC_TEST_FLOW}: ${WOLFEXEC_TEST_FLOW_OBJS} ${WOLFLIB} ${COMLIB}
	${CXX} -o $@ ${LDFLAGS} ${WOLFEXEC_TEST_FLOW_OBJS} ${LIBS}

${WOLFEXEC_TEST_TLV}: ${WOLFEXEC_TEST_TLV_OBJS} ${WOLFLIB} ${COMLIB}
	${CXX} -o $@ ${LDFLAGS} ${WOLFEXEC_TEST_TLV_OBJS} ${LIBS}

${WOLFEXEC_TEST_TCPS}: ${WOLFEXEC_TEST_TCPS_OBJS} ${COMLIB}
	${CXX} -o $@ ${LDFLAGS} ${WOLFEXEC_TEST_TCPS_OBJS} ${LIBS}

${WOLFEXEC_TEST_TCPC}: ${WOLFEXEC_TEST_TCPC_OBJS} ${COMLIB}
	${CXX} -o $@ ${LDFLAGS} ${WOLFEXEC_TEST_TCPC_OBJS} ${LIBS}

${WOLFEXEC_TEST_UDPC}: ${WOLFEXEC_TEST_UDPC_OBJS} ${COMLIB}
	${CXX} -o $@ ${LDFLAGS} ${WOLFEXEC_TEST_UDPC_OBJS} ${LIBS}

${WOLFEXEC_RUNNER}: ${WOLFEXEC_RUNNER_OBJS} ${WOLFLIB} ${COMLIB}
	${CXX} -o $@ ${LDFLAGS} ${WOLFEXEC_RUNNER_OBJS} ${LIBS}

wolfexec_clean:
	-rm ${WOLFEXEC_TEST_FLOW_OBJS} ${WOLFEXEC_TES_TTLV_OBJS} \
	${WOLFEXEC_TEST_TCPS_OBJS} ${WOLFEXEC_TEST_TCPC_OBJS} \
	${WOLFEXEC_RUNNER_OBJS} ${WOLFEXEC}

