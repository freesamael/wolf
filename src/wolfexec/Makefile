WOLFEXEC_TESTFLOW_OBJS = ${WOLFEXEC_SRCDIR}/testflow.o
WOLFEXEC_TESTFLOW = ${WOLF_BINDIR}/testflow
WOLFEXEC_TESTTLV_OBJS = ${WOLFEXEC_SRCDIR}/testtlv.o
WOLFEXEC_TESTTLV = ${WOLF_BINDIR}/testtlv
WOLFEXEC_RUNNER_OBJS = ${WOLFEXEC_SRCDIR}/runner.o
WOLFEXEC_RUNNER = ${WOLF_BINDIR}/runner
WOLFEXEC = ${WOLFEXEC_TESTFLOW} ${WOLFEXEC_TESTTLV} ${WOLFEXEC_RUNNER}

LIBS += -lpthread -ld2mce -lcom -lwolf
LDFLAGS += -L${COMLIB_SRCDIR} -L${WOLFLIB_SRCDIR}

${WOLFEXEC_TESTFLOW}: ${WOLFEXEC_TESTFLOW_OBJS}
	${CPP} -o $@ ${LDFLAGS} $^ ${LIBS}

${WOLFEXEC_TESTTLV}: ${WOLFEXEC_TESTTLV_OBJS}
	${CPP} -o $@ ${LDFLAGS} $^ ${LIBS}

${WOLFEXEC_RUNNER}: ${WOLFEXEC_RUNNER_OBJS}
	${CPP} -o $@ ${LDFLAGS} $^ ${LIBS}

wolfexec_clean:
	-rm ${WOLFEXEC_TESTFLOW_OBJS} ${WOLFEXEC_TESTTLV_OBJS} \
	${WOLFEXEC_RUNNER_OBJS} ${WOLFEXEC}

